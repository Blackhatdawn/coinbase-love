{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "cryptovault",
  "framework": "vite",
  "buildCommand": "cd frontend && yarn install && yarn build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && yarn install",
  "cleanUrls": true,
  "trailingSlash": false,

  "env": {
    "VITE_API_BASE_URL": ""
  },

  "rewrites": [
    {
      "source": "/api/docs",
      "destination": "https://cryptovault-api.onrender.com/api/docs"
    },
    {
      "source": "/api/docs/:path*",
      "destination": "https://cryptovault-api.onrender.com/api/docs/:path*"
    },
    {
      "source": "/api/redoc",
      "destination": "https://cryptovault-api.onrender.com/api/redoc"
    },
    {
      "source": "/api/openapi.json",
      "destination": "https://cryptovault-api.onrender.com/api/openapi.json"
    },
    {
      "source": "/api/:path*",
      "destination": "https://cryptovault-api.onrender.com/api/:path*"
    },
    {
      "source": "/health",
      "destination": "https://cryptovault-api.onrender.com/health"
    },
    {
      "source": "/ping",
      "destination": "https://cryptovault-api.onrender.com/ping"
    },
    {
      "source": "/csrf",
      "destination": "https://cryptovault-api.onrender.com/csrf"
    },
    {
      "source": "/socket.io/:path*",
      "destination": "https://cryptovault-api.onrender.com/socket.io/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],

  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        { "key": "X-Forwarded-Host", "value": "$host" },
        { "key": "X-Forwarded-Proto", "value": "https" },
        { "key": "X-Vercel-Proxy", "value": "true" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "geolocation=(), microphone=(), camera=(), payment=()" },
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" }
      ]
    },
    {
      "source": "/assets/:path*",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/:path(.*\\.(js|css))",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=604800, stale-while-revalidate=86400" }
      ]
    },
    {
      "source": "/:path(.*\\.(woff2|woff|ttf|eot))",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=2592000" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    },
    {
      "source": "/",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/:path(.*\\.html)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/:path(.*\\.(ico|png|jpg|jpeg|gif|svg|webp))",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=86400" }
      ]
    }
  ],

  "regions": ["iad1"],

  "github": {
    "silent": true,
    "autoJobCancelation": true
  },

  "git": {
    "deploymentEnabled": {
      "main": true,
      "preview": true
    }
  }
}
