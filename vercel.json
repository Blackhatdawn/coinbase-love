{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "cryptovault",
  "framework": "vite",
  "buildCommand": "cd frontend && yarn install && yarn build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && yarn install",
  "cleanUrls": true,
  "trailingSlash": false,

  "env": {
    "VITE_API_BASE_URL": {
      "description": "Production backend API base URL (leave empty to use relative paths)",
      "default": ""
    }
  },

  "build": {
    "env": {
      "VITE_API_BASE_URL": "@vite_api_base_url"
    }
  },

  "rewrites": [
    {
      "source": "/api/docs",
      "destination": "https://coinbase-love.fly.dev/api/docs"
    },
    {
      "source": "/api/docs/:path*",
      "destination": "https://coinbase-love.fly.dev/api/docs/:path*"
    },
    {
      "source": "/api/redoc",
      "destination": "https://coinbase-love.fly.dev/api/redoc"
    },
    {
      "source": "/api/openapi.json",
      "destination": "https://coinbase-love.fly.dev/api/openapi.json"
    },
    {
      "source": "/api/v1/:path*",
      "destination": "https://coinbase-love.fly.dev/api/v1/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "https://coinbase-love.fly.dev/api/:path*"
    },
    {
      "source": "/health",
      "destination": "https://coinbase-love.fly.dev/health"
    },
    {
      "source": "/ping",
      "destination": "https://coinbase-love.fly.dev/ping"
    },
    {
      "source": "/csrf",
      "destination": "https://coinbase-love.fly.dev/csrf"
    },
    {
      "source": "/socket.io/:path*",
      "destination": "https://coinbase-love.fly.dev/socket.io/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],

  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "X-Forwarded-Host",
          "value": "$host"
        },
        {
          "key": "X-Forwarded-Proto",
          "value": "https"
        },
        {
          "key": "X-Forwarded-For",
          "value": "$clientIp"
        },
        {
          "key": "X-Vercel-Proxy",
          "value": "true"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=(), payment=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' https://www.cryptovault.financial; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://unpkg.com https://vercel.live https://*.vercel-scripts.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https: blob:; connect-src 'self' https://www.cryptovault.financial https://coinbase-love.fly.dev wss://coinbase-love.fly.dev ws://coinbase-love.fly.dev https://*.fly.dev wss://*.fly.dev https://api.coincap.io https://ws.coincap.io wss://ws.coincap.io https://sentry.io https://*.sentry.io https://*.ingest.sentry.io https://vercel.live wss://vercel.live https://*.vercel.live; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests"
        }
      ]
    },
    {
      "source": "/assets/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/:path*.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=604800, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/:path*.css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=604800, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/:path*.woff2",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=2592000"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    {
      "source": "/:path*.woff",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=2592000"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    {
      "source": "/:path*.ttf",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=2592000"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    {
      "source": "/:path*.eot",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=2592000"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    {
      "source": "/:path*.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/:path*.ico",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/:path*.png",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/:path*.jpg",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/:path*.jpeg",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/:path*.gif",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/:path*.svg",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/:path*.webp",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ],

  "regions": ["iad1"],

  "github": {
    "silent": true,
    "autoJobCancelation": true
  },

  "git": {
    "deploymentEnabled": {
      "main": true,
      "preview": true
    }
  }
}
