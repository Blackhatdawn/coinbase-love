# Template - Copy to .env and fill in real values
MONGO_URL=
DB_NAME=cryptovault_db
CORS_ORIGINS=http://localhost:3000
JWT_SECRET=

# Email Configuration
# FIX #3: Clear documentation for required email settings
# ============================================
# CRITICAL FOR PRODUCTION: Email service must be properly configured
#
# EMAIL_SERVICE options:
#   - sendgrid: Use SendGrid API (requires SENDGRID_API_KEY)
#   - smtp: Use SMTP relay (requires SMTP_HOST, SMTP_USERNAME, SMTP_PASSWORD)
#   - mock: Development only - logs emails without sending (NOT ALLOWED IN PRODUCTION)
#
# For SendGrid (recommended for production):
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=  # REQUIRED if EMAIL_SERVICE=sendgrid in production
#
# For SMTP (alternative):
# EMAIL_SERVICE=smtp
SMTP_HOST=  # REQUIRED if EMAIL_SERVICE=smtp in production
SMTP_PORT=587
SMTP_USERNAME=  # REQUIRED if EMAIL_SERVICE=smtp in production
SMTP_PASSWORD=  # REQUIRED if EMAIL_SERVICE=smtp in production
SMTP_USE_TLS=true
SMTP_USE_SSL=false
#
# Email sender configuration:
EMAIL_FROM=noreply@cryptovault.com
EMAIL_FROM_NAME=CryptoVault

APP_URL=http://localhost:3000
PUBLIC_API_URL=
PUBLIC_WS_URL=
PUBLIC_SOCKET_IO_PATH=/socket.io/
PUBLIC_SITE_NAME=CryptoVault
PUBLIC_LOGO_URL=
PUBLIC_SUPPORT_EMAIL=
PUBLIC_SENTRY_DSN=
COINCAP_API_KEY=
USE_MOCK_PRICES=false
USE_REDIS=false

ALLOW_MOCK_PAYMENT_FALLBACK=false

FEATURE_2FA_ENABLED=true
FEATURE_DEPOSITS_ENABLED=true
FEATURE_WITHDRAWALS_ENABLED=true
FEATURE_TRANSFERS_ENABLED=true
FEATURE_TRADING_ENABLED=true
FEATURE_STAKING_ENABLED=false

# Telegram
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=
ADMIN_TELEGRAM_CHAT_ID=

FULL_PRODUCTION_CONFIGURATION=false
