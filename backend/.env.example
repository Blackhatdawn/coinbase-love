# ============================================
# CryptoVault Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ===================
# Database
# ===================
MONGO_URL=mongodb+srv://user:password@cluster.mongodb.net/cryptovault?retryWrites=true&w=majority
DB_NAME=cryptovault_db

# ===================
# Redis (Upstash)
# ===================
USE_REDIS=true
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# ===================
# JWT Authentication
# ===================
JWT_SECRET=your_super_secure_jwt_secret_key_min_32_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===================
# Email (SendGrid)
# ===================
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key
EMAIL_FROM=noreply@cryptovault.financial
EMAIL_FROM_NAME=CryptoVault Financial
EMAIL_VERIFICATION_URL=https://cryptovault.financial/verify

# ===================
# CoinGecko API
# ===================
COINGECKO_API_KEY=your_coingecko_pro_key_if_available
COINGECKO_RATE_LIMIT=50

# ===================
# Payment Gateway (NOWPayments)
# ===================
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_ipn_secret
NOWPAYMENTS_SANDBOX=true

# ===================
# Firebase Admin (Push Notifications)
# ===================
FIREBASE_CREDENTIALS_PATH=/app/backend/firebase-credentials.json
# Or use environment variable:
# FIREBASE_CREDENTIALS_JSON={"type":"service_account",...}

# ===================
# CORS Configuration
# ===================
CORS_ORIGINS=https://cryptovault.financial,https://www.cryptovault.financial,http://localhost:3000

# ===================
# Security
# ===================
CSRF_SECRET=your_csrf_secret_key
RATE_LIMIT_PER_MINUTE=60

# ===================
# Environment
# ===================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
