# MongoDB Configuration
# Local development MongoDB URL
MONGO_URL="mongodb://localhost:27017"

# Database name for the application
DB_NAME="cryptovault_db"

# CORS Configuration
# Comma-separated list of allowed origins
# Use "*" for development, specify domains in production
CORS_ORIGINS="*"

# JWT Secret (REQUIRED for production)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# This secret MUST persist across restarts to keep users logged in
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"

# Environment (development, staging, production)
ENVIRONMENT="development"

# MongoDB Connection Pool Settings (optional)
# MONGO_MAX_POOL_SIZE=50
# MONGO_MIN_POOL_SIZE=10
# MONGO_TIMEOUT_MS=5000

# Rate Limiting (optional)
# RATE_LIMIT_PER_MINUTE=60
