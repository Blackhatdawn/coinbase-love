# ============================================
# CRYPTOVAULT BACKEND ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in actual values
# Backend will automatically load from .env using python-dotenv
# ============================================

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Application name and version
APP_NAME=CryptoVault
APP_VERSION=2.0.0
ENVIRONMENT=production

# Debug mode (set to false in production)
DEBUG=false

# ============================================
# SERVER CONFIGURATION
# ============================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Number of Uvicorn workers (for production)
WORKERS=4

# Server URL (for external references, CORS, etc.)
SERVER_URL=http://localhost:8000
PUBLIC_SERVER_URL=https://api.cryptovault.com

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/cryptovault

# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ============================================
# REDIS / CACHE CONFIGURATION
# ============================================

# Redis connection URL (for caching and sessions)
# Format: redis://[:password]@host:port/db
# Or: redis+sentinel://...
# Or: rediss://... (for TLS)
REDIS_URL=redis://localhost:6379/0

# Redis key prefix for namespacing
REDIS_PREFIX=cryptovault:

# ============================================
# SECURITY & AUTHENTICATION
# ============================================

# JWT Secret Key (use strong random string in production)
# Generate: openssl rand -hex 32
JWT_SECRET=your-secret-key-here-change-in-production

# JWT Token Expiration (in seconds)
JWT_EXPIRATION_HOURS=24

# JWT Refresh Token Expiration (in seconds)
JWT_REFRESH_EXPIRATION_DAYS=7

# CSRF Secret (for CSRF token generation)
CSRF_SECRET=your-csrf-secret-key-here

# Password hashing algorithm
PASSWORD_ALGORITHM=bcrypt

# ============================================
# CORS CONFIGURATION
# ============================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://cryptovault.com,https://www.cryptovault.com

# ============================================
# EMAIL CONFIGURATION
# ============================================

# SMTP Server for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email sender address
EMAIL_FROM=noreply@cryptovault.com
EMAIL_SUPPORT=support@cryptovault.com

# ============================================
# SENTRY CONFIGURATION (Error Tracking)
# ============================================

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry environment
SENTRY_ENVIRONMENT=production

# Performance monitoring sample rate (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# EXTERNAL SERVICES
# ============================================

# Cryptocurrency data API (e.g., CoinGecko, Coinbase)
CRYPTO_API_KEY=your-crypto-api-key
CRYPTO_API_BASE_URL=https://api.coingecko.com/api/v3

# Blockchain RPC endpoints
ETH_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
POLYGON_RPC_URL=https://polygon-rpc.com
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your-infura-key

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable features
FEATURE_2FA_ENABLED=true
FEATURE_DEPOSITS_ENABLED=true
FEATURE_WITHDRAWALS_ENABLED=true
FEATURE_TRADING_ENABLED=true
FEATURE_STAKING_ENABLED=false

# ============================================
# RATE LIMITING
# ============================================

# Rate limit settings (requests per window)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json or text)
LOG_FORMAT=json

# ============================================
# WORKER / BACKGROUND JOBS
# ============================================

# Celery broker URL (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================
# DEPLOYMENT / INFRASTRUCTURE
# ============================================

# Render service configuration (if using Render)
RENDER_SERVICE_ID=your-render-service-id

# Environment (development, staging, production)
DEPLOYMENT_ENV=production

# ============================================
# MONITORING & OBSERVABILITY
# ============================================

# Enable health checks
HEALTH_CHECK_ENABLED=true

# Metrics export (Prometheus, DataDog, etc.)
METRICS_ENABLED=true
METRICS_PORT=9090
