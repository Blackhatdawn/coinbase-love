# ============================================
# CRYPTOVAULT BACKEND ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in actual values

APP_NAME=CryptoVault
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=false
FULL_PRODUCTION_CONFIGURATION=false

HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=INFO

# Database (MongoDB)
MONGO_URL=mongodb://localhost:27017
DB_NAME=cryptovault
MONGO_MAX_POOL_SIZE=10
MONGO_TIMEOUT_MS=5000

# Security
JWT_SECRET=change-me-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
CSRF_SECRET=change-me-in-production
USE_CROSS_SITE_COOKIES=false

# CORS
CORS_ORIGINS=http://localhost:3000

# Public/runtime URLs
APP_URL=http://localhost:3000
PUBLIC_API_URL=
PUBLIC_WS_URL=
PUBLIC_SOCKET_IO_PATH=/socket.io/
PUBLIC_SITE_NAME=CryptoVault Financial
PUBLIC_LOGO_URL=
PUBLIC_SUPPORT_EMAIL=support@cryptovault.financial
PUBLIC_SENTRY_DSN=

# Email
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_USE_SSL=false
EMAIL_FROM=team@cryptovault.financial
EMAIL_FROM_NAME=CryptoVault Financial
EMAIL_VERIFICATION_URL=http://localhost:3000/verify

# External services
COINCAP_API_KEY=
COINCAP_RATE_LIMIT=50
USE_MOCK_PRICES=false

NOWPAYMENTS_API_KEY=
NOWPAYMENTS_IPN_SECRET=
NOWPAYMENTS_SANDBOX=false
ALLOW_MOCK_PAYMENT_FALLBACK=false

# Redis / cache
USE_REDIS=true
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
REDIS_URL=
REDIS_PREFIX=cryptovault:

# Telegram
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=
ADMIN_TELEGRAM_CHAT_ID=

# Feature flags
FEATURE_2FA_ENABLED=true
FEATURE_DEPOSITS_ENABLED=true
FEATURE_WITHDRAWALS_ENABLED=true
FEATURE_TRANSFERS_ENABLED=true
FEATURE_TRADING_ENABLED=true
FEATURE_STAKING_ENABLED=false

# Monitoring
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
