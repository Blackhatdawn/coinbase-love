# ============================================
# CryptoVault Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# CRITICAL: Never commit .env to version control!

# ===================
# Database (REQUIRED)
# ===================
MONGO_URL=mongodb+srv://user:password@cluster.mongodb.net/cryptovault?retryWrites=true&w=majority
DB_NAME=cryptovault_db

# ===================
# Security (REQUIRED)
# ===================
# JWT_SECRET must be at least 32 characters
JWT_SECRET=your_super_secure_jwt_secret_key_min_32_chars_long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===================
# Redis Cache (Optional but Recommended)
# ===================
USE_REDIS=true
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# ===================
# Email Service (Choose one)
# ===================
# Options: mock, sendgrid
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key
EMAIL_FROM=noreply@cryptovault.financial
EMAIL_FROM_NAME=CryptoVault Financial

# ===================
# Market Data
# ===================
# CoinGecko API (get free key at coingecko.com)
COINGECKO_API_KEY=your_coingecko_api_key
USE_MOCK_PRICES=false

# ===================
# Error Tracking (Production)
# ===================
# Get DSN from sentry.io
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ===================
# CORS Configuration
# ===================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://cryptovault.financial,https://www.cryptovault.financial,http://localhost:3000

# ===================
# Server Configuration
# ===================
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8001

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_PER_MINUTE=5
RATE_LIMIT_SIGNUP_PER_MINUTE=3
REQUEST_TIMEOUT_SECONDS=30

# ===================
# Application URLs
# ===================
APP_URL=http://localhost:3000
