# ============================================
# CryptoVault Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# Database
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/?appName=YourApp
DB_NAME=cryptovault_db

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-here

# Email Service (mock, sendgrid, or smtp)
EMAIL_SERVICE=mock
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=CryptoVault

# SendGrid (only if EMAIL_SERVICE=sendgrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# CoinGecko API (optional, for higher rate limits)
COINGECKO_API_KEY=CG-your-coingecko-api-key

# Feature Flags
USE_MOCK_PRICES=false
USE_REDIS=false

# Redis/Upstash (only if USE_REDIS=true)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token
