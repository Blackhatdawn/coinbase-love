# ============================================
# CRYPTOVAULT BACKEND ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MongoDB Connection String
# Local: mongodb://localhost:27017/
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_URL=mongodb://localhost:27017/

# Database Name
DB_NAME=cryptovault_db

# ============================================
# SECURITY CONFIGURATION
# ============================================

# JWT Secret Key (IMPORTANT: Use a strong, random key in production)
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-characters-long

# JWT Algorithm
JWT_ALGORITHM=HS256

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS CONFIGURATION
# ============================================

# Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================
# EMAIL CONFIGURATION
# ============================================

# Email Service (sendgrid or mock)
EMAIL_SERVICE=sendgrid

# SendGrid API Key (Get from: https://sendgrid.com/)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Sender Email Address
EMAIL_FROM=noreply@cryptovault.com

# Sender Name
EMAIL_FROM_NAME=CryptoVault Financial

# Application URL (for email links)
APP_URL=http://localhost:3000

# ============================================
# CRYPTOCURRENCY API
# ============================================

# CoinGecko API Key (Get from: https://www.coingecko.com/en/api)
COINGECKO_API_KEY=CG-your_coingecko_api_key_here

# Use Mock Prices (for development/testing)
# Set to true to avoid API rate limits during development
USE_MOCK_PRICES=false

# ============================================
# REDIS CONFIGURATION
# ============================================

# Enable Redis Caching
USE_REDIS=true

# Upstash Redis REST URL (Get from: https://upstash.com/)
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io

# Upstash Redis REST Token
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# ============================================
# PAYMENT GATEWAY
# ============================================

# NOWPayments API Key (Get from: https://nowpayments.io/)
NOWPAYMENTS_API_KEY=your_nowpayments_api_key_here

# NOWPayments IPN Secret
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret_here

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Request Timeout (seconds)
REQUEST_TIMEOUT_SECONDS=30

# ============================================
# MONITORING & ERROR TRACKING (Optional)
# ============================================

# Sentry DSN for error tracking (Get from: https://sentry.io/)
# Leave empty to disable Sentry
SENTRY_DSN=

# Sentry Traces Sample Rate (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1

# Sentry Profiles Sample Rate (0.0 to 1.0)
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ============================================
# FIREBASE (Optional - for push notifications)
# ============================================

# Firebase Admin SDK Service Account (JSON content)
FIREBASE_CREDENTIALS=

# ============================================
# NOTES
# ============================================
# 
# Required for basic functionality:
# - MONGO_URL
# - JWT_SECRET
# - CORS_ORIGINS
#
# Required for email:
# - SENDGRID_API_KEY (or set EMAIL_SERVICE=mock)
#
# Required for live prices:
# - COINGECKO_API_KEY (or set USE_MOCK_PRICES=true)
#
# Optional but recommended:
# - UPSTASH_REDIS_REST_URL and token (for caching)
# - SENTRY_DSN (for error tracking)
#
# ============================================
