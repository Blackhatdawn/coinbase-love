# ============================================
# CRYPTOVAULT FRONTEND - DEVELOPMENT ENVIRONMENT
# ============================================
# These settings are used when running `yarn dev`
# ============================================

# API Base URL
# Leave empty to use Vite proxy (recommended for development)
# The Vite proxy forwards /api/* to http://localhost:8001
VITE_API_BASE_URL=

# Alternative: Use direct localhost connection (bypass proxy)
# VITE_API_BASE_URL=http://localhost:8001

# App Configuration
VITE_APP_NAME=CryptoVault
VITE_APP_VERSION=1.0.0-dev
VITE_NODE_ENV=development

# Sentry (optional in development)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_ENABLE_SENTRY=false

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=false
