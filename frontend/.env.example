# ============================================
# CryptoVault Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ===================
# API Configuration
# ===================
VITE_API_BASE=https://your-api.onrender.com
VITE_WS_URL=wss://your-api.onrender.com

# ===================
# Firebase (Push Notifications)
# ===================
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef
VITE_FIREBASE_VAPID_KEY=your_vapid_key_for_fcm

# ===================
# Payment Gateway (NOWPayments)
# ===================
# Get sandbox keys from: https://nowpayments.io/
VITE_NOWPAYMENTS_API_KEY=your_nowpayments_sandbox_key
VITE_NOWPAYMENTS_IPN_SECRET=your_ipn_secret

# ===================
# Analytics (Optional)
# ===================
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_VERCEL_ANALYTICS=true

# ===================
# Feature Flags
# ===================
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_PRICE_ALERTS=true
VITE_ENABLE_DEPOSITS=true
VITE_MAINTENANCE_MODE=false

# ===================
# App Configuration
# ===================
VITE_APP_NAME=CryptoVault
VITE_APP_DOMAIN=cryptovault.financial
VITE_SUPPORT_EMAIL=team@cryptovault.financial
