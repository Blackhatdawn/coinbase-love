# ============================================
# CryptoVault Frontend Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# Backend API URL (required in production)
# Leave empty in development to use Vite proxy
# Production: Set to your Render backend URL
VITE_API_BASE_URL=https://cryptovault-api.onrender.com

# Example production values:
# VITE_API_BASE_URL=https://cryptovault-api.onrender.com
# VITE_API_BASE_URL=https://api.cryptovault.financial

# App Configuration
VITE_APP_NAME=CryptoVault
VITE_APP_URL=https://cryptovault.financial

# Feature Flags (optional)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false
