{
  "version": 3,
  "framework": null,
  "buildCommand": "yarn build",
  "installCommand": "yarn install",
  "devCommand": "yarn dev",
  "outputDirectory": "dist",
  "cleanUrls": true,
  "trailingSlash": false,
  "github": {
    "silent": true,
    "autoJobCancelation": true
  },
  
  "rewrites": [
    // ========== API ROUTES - FIRST ==========
    // API Root (/api → backend root /)
    {
      "source": "/api",
      "destination": "https://cryptovault-api.onrender.com/"
    },
    
    // API Documentation endpoints
    {
      "source": "/api/docs",
      "destination": "https://cryptovault-api.onrender.com/docs"
    },
    {
      "source": "/api/docs/:path*",
      "destination": "https://cryptovault-api.onrender.com/docs/:path*"
    },
    
    // ReDoc documentation
    {
      "source": "/api/redoc",
      "destination": "https://cryptovault-api.onrender.com/redoc"
    },
    
    // Health check (fast cached endpoint)
    {
      "source": "/api/health",
      "destination": "https://cryptovault-api.onrender.com/health",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=30, stale-while-revalidate=60"
        }
      ]
    },
    
    // OpenAPI JSON schema
    {
      "source": "/api/openapi.json",
      "destination": "https://cryptovault-api.onrender.com/openapi.json"
    },
    
    // CRITICAL: All other API endpoints
    // Maps: /api/users → backend /users
    // Maps: /api/auth/login → backend /auth/login
    {
      "source": "/api/:path+",
      "destination": "https://cryptovault-api.onrender.com/:path+"
    },
    
    // ========== STATIC ASSETS ==========
    {
      "source": "/assets/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    
    // ========== SPA FALLBACK - MUST BE LAST ==========
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/index",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/api/v:version",
      "destination": "/api",
      "permanent": true
    }
  ],
  
  "headers": [
    // Global security headers for frontend
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=(), payment=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        },
        {
          "key": "X-DNS-Prefetch-Control",
          "value": "on"
        },
        {
          "key": "X-Permitted-Cross-Domain-Policies",
          "value": "none"
        },
        {
          "key": "X-Download-Options",
          "value": "noopen"
        },
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        }
      ]
    },
    
    // API Proxy Headers - Forward client info
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "X-Forwarded-Host",
          "value": "{{host}}"
        },
        {
          "key": "X-Forwarded-Proto",
          "value": "https"
        },
        {
          "key": "X-Forwarded-For",
          "value": "{{client_ip}}"
        },
        {
          "key": "X-Real-IP",
          "value": "{{client_ip}}"
        },
        {
          "key": "X-Vercel-Proxy",
          "value": "true"
        },
        {
          "key": "X-Vercel-Forwarded-For",
          "value": "{{client_ip}}"
        },
        {
          "key": "X-Forwarded-Path",
          "value": "/:path*"
        }
      ]
    },
    
    // Static Assets Optimization
    {
      "source": "/assets/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Vary",
          "value": "Accept-Encoding"
        }
      ]
    },
    
    {
      "source": "/(.*\\.(js|css))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=604800, stale-while-revalidate=86400"
        }
      ]
    },
    
    {
      "source": "/(.*\\.(woff2|woff|ttf|eot))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=2592000"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    
    // No cache for HTML and critical pages
    {
      "source": "/(.*\\.html|/|/index\\.html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        }
      ]
    },
    
    // Service Worker
    {
      "source": "/sw\\.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        },
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    },
    
    // Web App Manifest
    {
      "source": "/manifest\\.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    
    // Icon files
    {
      "source": "/(.*\\.(ico|png|jpg|jpeg|gif|svg|webp))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ],
  
  "functions": {
    "api/*.js": {
      "maxDuration": 10,
      "memory": 512,
      "runtime": "nodejs18.x"
    }
  },
  
  "crons": [
    {
      "path": "/api/health",
      "schedule": "*/5 * * * *"
    }
  ],
  
  "regions": ["iad1"],
  
  "analytics": {
    "enable": true
  },
  
  "speedInsights": {
    "enable": true
  },
  
  "git": {
    "deploymentEnabled": {
      "main": true,
      "preview": true
    },
    "autoAlias": true
  },
  
  "env": {
    "NEXT_PUBLIC_API_BASE": "/api"
  },
  
  "observability": {
    "enabled": true
  },
  
  "protectionBypass": {
    "main": ["team-admin"],
    "preview": ["all"]
  },
  
  "errorTracking": {
    "enabled": true
  },
  
  "logDrain": {
    "enabled": true
  }
}
